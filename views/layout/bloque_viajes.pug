.row.proximos-viajes 
    //- Pug tiene unos metodos para iterar en un arreglo
    each resultado in resultados
        .col-md-6.col-lg-4.mb-4
            .card 
                img.card-img-top(src=`img/destinos_${resultado.imagen}.jpg`)
                .card-body
                    h2=resultado.titulo
                    p
                        svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='none' stroke='#e84393' stroke-linecap='round' stroke-linejoin='round' width='24' height='24' stroke-width='2')
                            path(d='M11.5 21h-5.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v6')
                            path(d='M16 3v4')
                            path(d='M8 3v4')
                            path(d='M4 11h16')
                            path(d='M15 19l2 2l4 -4')
                            
                        | #{resultado.fecha_ida} - #{resultado.fecha_vuelta}

                    p 
                        svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='none' stroke='#e84393' stroke-linecap='round' stroke-linejoin='round' width='24' height='24' stroke-width='2')
                            path(d='M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0')
                            path(d='M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                            path(d='M16 3.13a4 4 0 0 1 0 7.75')
                            path(d='M21 21v-2a4 4 0 0 0 -3 -3.85')

                        | #{resultado.disponibles} Disponibles
                    
                    //- Utilizamos un metodo de js que empieza en la letra 0 y termina en la 100
                    p= (resultado.descripcion ? resultado.descripcion.slice(0, 100) : '') + (resultado.descripcion && resultado.descripcion.length > 100 ? '...' : '')


                    a(href=`viajes/${resultado.slug}`, class="btn btn-success btn-block") Mas informacion